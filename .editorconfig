# EditorConfig: http://EditorConfig.org

# Top-most EditorConfig file
root = true

# Basic defaults
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

[*.{js,jsx,ts,tsx,json,yml,css,scss,sass,less,styl]
indent_size = 2

